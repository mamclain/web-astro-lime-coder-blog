---
const {
    href,
    title,
    excerpt,
    date,
    image,
    tags = []
} = Astro.props;
---
<a href={href} class="card grid md:grid-cols-[16rem_1fr] gap-4 overflow-hidden">
    {image && (
            <img src={image} alt="" class="aspect-[3/4] md:aspect-auto object-cover md:h-full" loading="lazy" />
    )}
    <div class="p-5">
        <div class="text-xs text-[var(--color-ink-muted)]">{new Date(date).toLocaleDateString()}</div>
        <h3 class="mt-1 font-display text-xl text-white">{title}</h3>
        <p class="mt-2 text-[var(--color-ink-muted)] line-clamp-3">{excerpt}</p>
        <div class="mt-3 flex flex-wrap gap-2">
            {tags.map(t => <span class="badge">{t}</span>)}
        </div>
    </div>
</a>